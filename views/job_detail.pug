extends header

block content
  title #{job.title}
  center
    h1 #{title}: #{job.title}
  
    p #[strong User:] 
        a(href=job.user.url) #{job.user.name}
    p #[strong Description:] #{job.description}
    p #[strong Tag:] 
        each val in job.tag
            a(href=val.url) #{val.name}
            |,       
    hr
    if (current_user.url == job.user.url || current_user.isAdmin == true)
      p
        a(href=job.url+'/update') Update Job
      p
        a(href=job.url+'/delete') Delete Job
      h4 #{job.user}